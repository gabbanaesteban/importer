<main>
  <div class="p-3 pb-md-4 mx-auto">
    <h1 class="display-4 fw-normal">Your imports</h1>
    <p class="fs-5 text-muted">List of imports</p>
  </div>

  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>File</th>
          <th>Status</th>
          <th>Imported at</th>
          <th>Fail</th>
          <th>Logs</th>
        </tr>
      </thead>
      <tbody>
        {{#each data.imports}}
          <tr>
            <td>{{ originalName }}</td>
            <td>{{ status }}</td>
            <td>{{formatDate createdAt }}</td>
            <td>{{ _count.Log }}</td>
            <td><a href="/logs?importId={{ id }}">Check logs</a></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</main>
